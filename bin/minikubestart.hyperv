if [[ $? -ne 0 ]]; then
    exit 1
fi

## preprocess
##   config vm.max_map_count
##   add host folder credential
##   mount host folder as cifs
echo -n "Logon Password (${USERDOMAIN}\\${USERNAME}): "
read -s password
echo ""
if [[ -z "${password}" ]]; then
    exit 1
fi
password=$(printf "%q" ${password})

minikube ssh << SCRIPT
sudo sysctl -w vm.max_map_count=262144
echo vm.max_map_count=262144 | sudo tee /etc/sysctl.d/vm.conf
printf "username=%s\npassword=%s\nworkroup=%s\n" ${USERNAME} ${password} ${USERDOMAIN} | sudo tee /root/.credentials >/dev/null
sudo chmod 600 /root/.credentials
docker_uid=\$(id -u docker)
docker_gid=\$(id -g docker)
sudo umount -f /c
sudo mkdir -p /c
sudo chown docker:docker /c
sudo mount -t cifs -o user,uid=\${docker_uid},gid=\${docker_gid},credentials=/root/.credentials //${COMPUTERNAME}/C /c
exit
SCRIPT
unset password

